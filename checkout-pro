  <script>
    // Pricing logic for Pro
    const usersPro = document.getElementById('users-pro');
    const breakdownPro = document.getElementById('breakdown-pro');
    const totalPro = document.getElementById('total-pro');

    function updatePro(){
      const base = 13000;
      const included = 5;
      const per = 450;
      let users = parseInt(usersPro.value || 0, 10);
      if (users < 1) users = 1;
      const extra = Math.max(0, users - included);
      const extraCost = extra * per;
      const total = base + extraCost;
      breakdownPro.textContent = `Base ${base.toLocaleString('fr-FR')} € + ${extraCost.toLocaleString('fr-FR')} € (suppléments ${extra}×${per} €)`;
      totalPro.textContent = `Total annuel estimé : ${total.toLocaleString('fr-FR')} € HT`;
    }
    usersPro.addEventListener('input', updatePro);
    updatePro();

    function handleSubmit(e){
      e.preventDefault();
      const company = document.getElementById('company-pro').value;
      const contact = document.getElementById('contact-pro').value;
      alert(`Merci ${contact} — votre demande de souscription Pro pour "${company}" a été enregistrée. Vous serez redirigé(e) vers la page de paiement.`);
      return false;
    }
  </script>
