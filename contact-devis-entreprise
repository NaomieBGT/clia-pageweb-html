  <script>
    // Basic client behavior: validation + confirmation
    function handleSubmit(e){
      e.preventDefault();
      const form = e.target;
      const required = ['company','contact-name','email'];
      for(const id of required){
        const el = document.getElementById(id);
        if(!el || !el.value.trim()){
          el.focus();
          alert('Merci de remplir le champ : ' + (el ? el.previousElementSibling.textContent : id));
          return false;
        }
      }

      const company = document.getElementById('company').value.trim();
      const contact = document.getElementById('contact-name').value.trim();
      const email = document.getElementById('email').value.trim();

      // Demo behavior: show confirmation and clear form
      alert(`Demande reçue — Merci ${contact} (${company}). Nous vous contacterons à ${email} sous 48h ouvrées.`);
      form.reset();
      return false;
    }
  </script>
